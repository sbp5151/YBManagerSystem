<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                 >

    <LinearLayout android:layout_width="@dimen/dialog_width"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dialog_shape"
                  android:layout_marginTop="13dp"
                  android:layout_marginLeft="13dp"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/dialog1_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:text="@string/room_root"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_title_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_content_height2"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="45dp"
                          android:gravity="center_vertical"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="房间名称："
                          android:textSize="@dimen/dialog_content_size"
                          android:textColor="@android:color/black"
                />

                <LinearLayout android:layout_width="140dp"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_room_name"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="设置房间名称"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_content_size"/>
                    <View
                        android:layout_width="140dp"
                        android:layout_height="1px"
                        android:layout_gravity="bottom"
                        android:background="@color/colorLine"
                    />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="45dp"
                          android:gravity="center_vertical"
                          android:layout_marginTop="6dp"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="管理密码："
                          android:textSize="@dimen/dialog_content_size"
                          android:textColor="@android:color/black"
                />

                <LinearLayout android:layout_width="140dp"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_manage_password"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:hint="设置管理密码"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_content_size"/>
                    <View
                        android:layout_width="140dp"
                        android:layout_height="1px"
                        android:layout_gravity="bottom"
                        android:background="@color/colorLine"
                    />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="45dp"
                          android:gravity="center_vertical"
                          android:layout_marginTop="6dp"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="管理密码："
                          android:textSize="@dimen/dialog_content_size"
                          android:textColor="@android:color/black"
                />

                <LinearLayout android:layout_width="140dp"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">
                    <EditText
                        android:id="@+id/et_manage_password_again"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:hint="再次输入"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_content_size"/>
                    <View
                        android:layout_width="140dp"
                        android:layout_height="1px"
                        android:layout_gravity="bottom"
                        android:background="@color/colorLine"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                 >

    <LinearLayout android:layout_width="640dp"
                  android:layout_height="320dp"
                  android:background="@drawable/dialog_shape"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/dialog1_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/dialog_title_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />

        <TextView
            android:id="@+id/tv_keepout_message"
            android:layout_width="match_parent"
                  android:text="房间空闲"
                  android:textSize="20dp"
                  android:textColor="@android:color/black"
                  android:gravity="center"
                  android:layout_height="match_parent"/>

        <Button
            android:id="@+id/dialog1_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_height"
            android:background="@drawable/dialog_right_pre_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:visibility="gone"
            android:textColor="#000"
            android:textSize="16dp"/>
    </LinearLayout>

</RelativeLayout>
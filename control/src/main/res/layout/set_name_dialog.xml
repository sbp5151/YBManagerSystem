<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
>

    <LinearLayout android:layout_width="@dimen/dialog_width"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="13dp"
                  android:layout_marginTop="13dp"
                  android:background="@drawable/dialog_shape"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/dialog1_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:text="@string/open_room_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_title_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_content_height2"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="45dp"
                          android:gravity="center"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="客户名称："
                          android:textSize="@dimen/dialog_content_size"
                          android:textColor="@android:color/black"
                />

                <LinearLayout android:layout_width="140dp"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">
                    <EditText
                        android:id="@+id/dialog_client_name"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="客户名称"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_content_size"/>
                        <View
                            android:layout_width="140dp"
                            android:layout_height="1px"
                            android:layout_gravity="bottom"
                            android:background="@color/colorLine"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="45dp"
                          android:gravity="center"
                          android:layout_marginTop="6dp"
                          android:orientation="horizontal">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:gravity="center"
                          android:text="开房时长："
                          android:textSize="@dimen/dialog_content_size"
                          android:textColor="@android:color/black"
                />

                <LinearLayout android:layout_width="140dp"
                              android:layout_height="match_parent"
                              android:gravity="center_vertical"
                              android:orientation="vertical">
                    <EditText
                        android:id="@+id/dialog_continued"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="开房时长(分钟)"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dialog_content_size"/>
                    <View
                        android:layout_width="140dp"
                        android:layout_height="1px"
                        android:layout_gravity="bottom"
                        android:background="@color/colorLine"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />
        <Button
            android:id="@+id/dialog1_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_height"
            android:background="@drawable/dialog_right_pre_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#000"
            android:textSize="@dimen/dialog_button_size"/>
    </LinearLayout>

</RelativeLayout>
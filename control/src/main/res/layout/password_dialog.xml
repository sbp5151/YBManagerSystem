<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                 >

    <LinearLayout android:layout_width="@dimen/dialog_width"
                  android:layout_height="wrap_content"
                  android:background="@drawable/dialog_shape"
                  android:layout_marginTop="13dp"
                  android:layout_marginLeft="13dp"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/dialog1_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="center"
            android:text="请输入房间管理密码"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dialog_title_size"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_content_height"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_dialog_password"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="管理密码"
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/dialog_content_size"/>
            <View
                android:layout_width="120dp"
                android:layout_height="1px"
                android:background="@color/colorLine"
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine"
        />
        <Button
            android:id="@+id/btn_password_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_bottom_height"
            android:background="@drawable/dialog_right_pre_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#000"
            android:textSize="@dimen/dialog_button_size"/>
    </LinearLayout>

</RelativeLayout>